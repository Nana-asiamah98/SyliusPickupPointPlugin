{% extends '@SyliusUi/Form/theme.html.twig' %}

{% block setono_sylius_pickup_point_choice_row %}
    <div class="setono-sylius-pickup-point-field {% if required %}required {% endif %}field{% if (not compound or force_error|default(false)) and not valid %} error{% endif %}">
        {{- form_label(form) -}}
        {{- form_widget(form, {'attr': {'class': 'setono-sylius-pickup-point-field-input'}}) -}}
        {{- form_errors(form) -}}

        {# @todo Omit using prototype like this as it present at DOM and querySelector results #}
        <div class="setono-sylius-pickup-point-field-choice-prototype" style="display: none;">
            <div class="item">
                <div class="field">
                    <div class="ui radio checkbox">
                        <input id="{{ form.vars.id }}_{value}" class="setono-sylius-pickup-point-field-choice-field"
                               type="radio" name="{{ form.vars.id }}[pickupPoint]" required value="{value}">
                        <label></label>
                    </div>
                </div>
                <div class="content">
                    <a class="header">
                        <label for="{{ form.vars.id }}_{value}" class="required">{label}</label>
                    </a>
                </div>
            </div>
        </div>
        <div class="setono-sylius-pickup-point-field-choices ui items"></div>
    </div>
{% endblock %}
