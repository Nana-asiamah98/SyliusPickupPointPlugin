<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <mapped-superclass name="Setono\SyliusPickupPointPlugin\Model\PickupPoint" table="setono_sylius_pickup_point__pickup_point">
        <unique-constraints>
            <unique-constraint columns="provider_id,provider,country"/>
        </unique-constraints>

        <id name="id" column="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="providerId" column="provider_id"/>
        <field name="provider" column="provider"/>
        <field name="name"/>
        <field name="address"/>
        <field name="zipCode"/>
        <field name="city"/>
        <field name="country" column="country"/>
        <field name="latitude" nullable="true"/>
        <field name="longitude" nullable="true"/>
    </mapped-superclass>
</doctrine-mapping>
