<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <service id="setono_sylius_pickup_point.controller.action.find_pickup_points"
                 class="Setono\SyliusPickupPointPlugin\Controller\Action\FindPickupPointsAction">
            <argument type="service" id="fos_rest.view_handler.default" />
            <argument type="service" id="sylius.context.cart.composite" />
            <argument type="service" id="security.csrf.token_manager" />
            <argument type="service" id="setono_sylius_pickup_point.registry.provider" />
            <tag name="controller.service_arguments"/>
        </service>

        <service id="setono_sylius_pickup_point.controller.action.pickup_point"
                 class="Setono\SyliusPickupPointPlugin\Controller\Action\PickupPointAction">
            <argument type="service" id="fos_rest.view_handler.default" />
            <argument type="service" id="setono_sylius_pickup_point.form.type.data_transformer.pickup_point_to_identifier" />
            <tag name="controller.service_arguments"/>
        </service>

    </services>
</container>
